generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  phone    String? @unique
  userName String  @map("user_name")
  password String // Hashed with bcrypt

  // Financial
  balance  Decimal @default(0) @db.Decimal(15, 2)
  currency String  @default("USD")

  // Banking (encrypted at application level)
  bankAccount   String? @map("bank_account")
  accountNumber String? @map("account_number")
  bankName      String? @map("bank_name")

  // Metadata
  country      String?
  promoCode    String? @map("promo_code")
  referralCode String? @unique @map("referral_code") // User's own referral code
  referredBy   String? @map("referred_by") // Who referred this user

  // Security & Sessions
  emailVerified    Boolean @default(false) @map("email_verified")
  phoneVerified    Boolean @default(false) @map("phone_verified")
  twoFactorEnabled Boolean @default(false) @map("two_factor_enabled")

  // Status
  status UserStatus @default(ACTIVE)
  role   UserRole   @default(USER)

  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  lastLoginAt DateTime? @map("last_login_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  sessions     Session[]
  transactions Transaction[]
  orders       Order[]
  apiKeys      ApiKey[]
  activityLogs ActivityLog[]
  referrals    Referral[]    @relation("ReferredUsers")
  referrer     Referral?     @relation("Referrer")

  @@index([email])
  @@index([phone])
  @@index([status])
  @@index([createdAt])
  @@index([referralCode])
  @@map("users")
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
  PENDING_VERIFICATION
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

// ============================================
// AUTHENTICATION & SESSIONS
// ============================================

model Session {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  token        String   @unique
  refreshToken String?  @unique @map("refresh_token")
  deviceInfo   Json?    @map("device_info")
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  name        String
  key         String    @unique
  permissions Json      @default("[]")
  isActive    Boolean   @default(true) @map("is_active")
  lastUsedAt  DateTime? @map("last_used_at")
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
  @@map("api_keys")
}

// ============================================
// SMS PROVIDERS & SERVICES
// ============================================

model Provider {
  id          String @id @default(cuid())
  name        String @unique // "sms-man", "textverified"
  displayName String @map("display_name")
  apiKey      String @map("api_key") // Encrypted
  apiUrl      String @map("api_url")

  // Status & Health
  isActive        Boolean      @default(true) @map("is_active")
  priority        Int          @default(0) // Higher priority = preferred
  healthStatus    HealthStatus @default(HEALTHY) @map("health_status")
  lastHealthCheck DateTime?    @map("last_health_check")

  // Rate limiting
  rateLimit Int @default(1000) @map("rate_limit") // Requests per hour

  // Configuration
  config Json @default("{}")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  services       Service[]
  orders         Order[]
  providerPrices ProviderPrice[]

  @@index([isActive, priority])
  @@map("providers")
}

enum HealthStatus {
  HEALTHY
  DEGRADED
  DOWN
}

model Service {
  id         String @id @default(cuid())
  providerId String @map("provider_id")

  // Service details
  serviceCode String @map("service_code") // e.g., "google", "facebook", "whatsapp"
  serviceName String @map("service_name")
  country     String // ISO country code

  // Status
  isActive  Boolean @default(true) @map("is_active")
  available Boolean @default(true) // Real-time availability

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orders   Order[]

  @@unique([providerId, serviceCode, country])
  @@index([serviceCode, country, isActive])
  @@map("services")
}

model ProviderPrice {
  id         String @id @default(cuid())
  providerId String @map("provider_id")

  serviceCode String @map("service_code")
  country     String

  // Pricing
  baseCost Decimal @map("base_cost") @db.Decimal(10, 4) // Provider's cost

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, serviceCode, country])
  @@index([serviceCode, country])
  @@map("provider_prices")
}

// ============================================
// PRICING & MARGINS
// ============================================

model PricingRule {
  id String @id @default(cuid())

  // Service matching
  serviceCode String? @map("service_code") // null = applies to all
  country     String? // null = applies to all

  // Pricing strategy
  profitType  ProfitType @map("profit_type")
  profitValue Decimal    @map("profit_value") @db.Decimal(10, 4) // Percentage or fixed amount

  // Priority (higher = more specific, takes precedence)
  priority Int @default(0)

  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([serviceCode, country, isActive])
  @@index([priority])
  @@map("pricing_rules")
}

enum ProfitType {
  PERCENTAGE // e.g., 20% markup
  FIXED // e.g., $0.50 markup
}

// ============================================
// ORDERS & TRANSACTIONS
// ============================================

model Order {
  id         String @id @default(cuid())
  userId     String @map("user_id")
  providerId String @map("provider_id")
  serviceId  String @map("service_id")

  // Order details
  orderNumber String  @unique @map("order_number")
  serviceCode String  @map("service_code")
  country     String
  phoneNumber String? @map("phone_number")

  // Provider details
  providerOrderId String? @map("provider_order_id")

  // SMS details
  smsCode    String?   @map("sms_code")
  smsText    String?   @map("sms_text")
  receivedAt DateTime? @map("received_at")

  // Pricing
  baseCost   Decimal @map("base_cost") @db.Decimal(10, 4)
  profit     Decimal @db.Decimal(10, 4)
  finalPrice Decimal @map("final_price") @db.Decimal(10, 4)
  currency   String  @default("USD")

  // Status & Lifecycle
  status      OrderStatus @default(PENDING)
  expiresAt   DateTime    @map("expires_at")
  completedAt DateTime?   @map("completed_at")
  cancelledAt DateTime?   @map("cancelled_at")

  // Retry logic
  retryCount Int @default(0) @map("retry_count")

  // Metadata
  metadata Json @default("{}")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User     @relation(fields: [userId], references: [id])
  provider Provider @relation(fields: [providerId], references: [id])
  service  Service  @relation(fields: [serviceId], references: [id])

  @@index([userId, status])
  @@index([orderNumber])
  @@index([status, createdAt])
  @@index([providerId, status])
  @@index([expiresAt])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  WAITING_SMS
  COMPLETED
  CANCELLED
  EXPIRED
  FAILED
  REFUNDED
}

model Transaction {
  id     String @id @default(cuid())
  userId String @map("user_id")

  // Transaction details
  transactionNumber String          @unique @map("transaction_number")
  type              TransactionType
  amount            Decimal         @db.Decimal(15, 2)
  currency          String          @default("USD")

  // Balance tracking
  balanceBefore Decimal @map("balance_before") @db.Decimal(15, 2)
  balanceAfter  Decimal @map("balance_after") @db.Decimal(15, 2)

  // References
  orderId     String? @map("order_id")
  referenceId String? @map("reference_id") // External payment ID

  // Payment details
  paymentMethod  String? @map("payment_method")
  paymentDetails Json?   @map("payment_details")

  // Status
  status TransactionStatus @default(PENDING)

  // Notes
  description String?
  adminNotes  String? @map("admin_notes")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([transactionNumber])
  @@index([type, status])
  @@index([createdAt])
  @@map("transactions")
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  ORDER_PAYMENT
  REFUND
  BONUS
  REFERRAL_REWARD
  ADMIN_ADJUSTMENT
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

// ============================================
// REFERRALS & PROMOTIONS
// ============================================

model Referral {
  id         String @id @default(cuid())
  referrerId String @map("referrer_id")
  referredId String @unique @map("referred_id")

  // Rewards
  referrerReward Decimal? @map("referrer_reward") @db.Decimal(10, 2)
  referredReward Decimal? @map("referred_reward") @db.Decimal(10, 2)
  rewardPaid     Boolean  @default(false) @map("reward_paid")

  createdAt DateTime @default(now()) @map("created_at")

  referrer User @relation("ReferredUsers", fields: [referrerId], references: [id])
  referred User @relation("Referrer", fields: [referredId], references: [id])

  @@index([referrerId])
  @@map("referrals")
}

model PromoCode {
  id   String @id @default(cuid())
  code String @unique

  // Discount details
  discountType  DiscountType @map("discount_type")
  discountValue Decimal      @map("discount_value") @db.Decimal(10, 4)

  // Usage limits
  maxUses        Int? @map("max_uses")
  usedCount      Int  @default(0) @map("used_count")
  maxUsesPerUser Int? @map("max_uses_per_user")

  // Validity
  validFrom  DateTime @map("valid_from")
  validUntil DateTime @map("valid_until")
  isActive   Boolean  @default(true) @map("is_active")

  // Restrictions
  minPurchase Decimal? @map("min_purchase") @db.Decimal(10, 2)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("promo_codes")
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

// ============================================
// LOGGING & ANALYTICS
// ============================================

model ActivityLog {
  id     String  @id @default(cuid())
  userId String? @map("user_id")

  // Activity details
  action     String
  resource   String?
  resourceId String? @map("resource_id")

  // Request details
  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")

  // Data
  metadata Json @default("{}")

  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([createdAt])
  @@map("activity_logs")
}

model SystemLog {
  id String @id @default(cuid())

  level    LogLevel
  service  String // "provider-sync", "order-processor", etc.
  message  String
  error    String?  @db.Text
  metadata Json     @default("{}")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([level, createdAt])
  @@index([service, createdAt])
  @@index([createdAt])
  @@map("system_logs")
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
  FATAL
}

// ============================================
// SYSTEM CONFIGURATION
// ============================================

model SystemConfig {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Json
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("system_config")
}
